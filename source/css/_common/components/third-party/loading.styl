#loading {
  @extend $fix-fullscreen;
  background-color: var(--grey-1);
  if(!hexo-config('loader.start')) {
    display: none;
  }
}

// loading animation
.myloading {
  width: 100%;
  height: 100%;
  min-height: 100vh;
  display: flex;
  font-family: 'Open Sans', sans-serif;
  justify-content: center;
  align-items: center;
	align-content: space-between;
  animation: blend 22s ease infinite;}


.circle-1 {
  width: 50px;
  height: 50px;
  background: #fff;
  border-radius: 50%;
  margin: 5px;
  position: relative;
  overflow: hidden;
  background: linear-gradient(0deg, #9ce6d3, #83d7a4, #839bd7, #556281, #1b6fb4, #59bd73, #b7c67a, #cddf86);
  background-size: 2000% 2000%;
  animation: circle 2.5s ease infinite, float 2.5s ease infinite;
  animation-delay: 0.2s; }
  .circle-1:before {
    content: "";
    position: absolute;
    top: 1%;
    left: 5%;
    width: 90%;
    height: 90%;
    border-radius: 50%;
    background: radial-gradient(circle at 50% 0px, white, rgba(255, 255, 255, 0) 58%);
    -webkit-filter: blur(2px);
    z-index: 2;
    animation: highlight 2.5s ease infinite;
    animation-delay: 0.2s;
    opacity: 0.3; }

