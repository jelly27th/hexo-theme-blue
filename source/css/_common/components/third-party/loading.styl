@keyframes blend {
  0% {
    background-position: 70% 0; }
  50% {
    background-position: 31% 100%; }
  100% {
    background-position: 70% 0; } }

@keyframes circle {
  0% {
    background-position: 50% 0; }
  50% {
    background-position: 0% 100%; }
  100% {
    background-position: 50% 0; } }

@keyframes float {
  0% {
    transform: translateY(0);
    box-shadow: 0px 7px 20px 2px rgba(0, 0, 0, 0.2); }
  50% {
    transform: translateY(-100px);
    box-shadow: 0px 30px 100px 0 rgba(0, 0, 0, 0.1); }
  100% {
    transform: translateY(0);
    box-shadow: 0px 7px 20px 2px rgba(0, 0, 0, 0.2); } }

@keyframes highlight {
  0% {
    opacity: 0.3; }
  50% {
    opacity: 1; }
  100% {
    opacity: 0.3; } }

